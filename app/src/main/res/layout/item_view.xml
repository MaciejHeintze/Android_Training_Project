<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_view_layout_height">

    <ImageView
        android:id="@+id/user_avatar_id"
        android:layout_width="@dimen/user_avatar_size"
        android:layout_height="@dimen/user_avatar_size"
        android:layout_marginStart="@dimen/user_avatar_start_margin"
        android:background="@drawable/avatar_placeholder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/user_name_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/user_name_start_margin"
        android:layout_marginTop="@dimen/user_name_top_margin"
        android:textSize="@dimen/user_name_text_size"
        android:maxLength="25"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@id/user_avatar_id"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/user_score_id"/>

    <TextView
        android:id="@+id/user_score_id"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/user_values_height"
        android:layout_marginStart="@dimen/user_values_start_margin"
        android:layout_marginTop="@dimen/user_score_top_margin"
        android:textSize="@dimen/user_values_text_size"
        android:maxLength="30"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintStart_toEndOf="@id/user_avatar_id"
        app:layout_constraintTop_toBottomOf="@id/user_name_id"
        app:layout_constraintBottom_toTopOf="@id/user_type_id"/>

    <TextView
        android:id="@+id/user_type_id"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/user_values_height"
        android:layout_marginStart="@dimen/user_values_start_margin"
        android:textSize="@dimen/user_values_text_size"
        android:maxLength="30"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintStart_toEndOf="@id/user_avatar_id"
        app:layout_constraintTop_toBottomOf="@id/user_score_id"
        app:layout_constraintBottom_toTopOf="@id/html_url_id"/>
    <TextView
        android:id="@+id/html_url_id"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/user_values_height"
        android:layout_marginStart="@dimen/user_values_start_margin"
        android:textSize="@dimen/user_values_text_size"
        android:ellipsize="end"
        android:maxLines="2"
        android:maxLength="60"
        app:layout_constraintStart_toEndOf="@id/user_avatar_id"
        app:layout_constraintTop_toBottomOf="@id/user_type_id"
        app:layout_constraintBottom_toTopOf="@id/repo_click_info_id"/>

    <TextView
        android:id="@+id/repo_click_info_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/repo_info_textview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_avatar_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>