<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/search_user_edit_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/search_user_edit_text_height"
        android:layout_alignParentTop="true"
        android:hint="@string/search_user_edit_text"/>
    <Button
        style="@style/Widget.AppCompat.Button.Colored"
        android:id="@+id/search_user_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/search_user_edit_text"
        android:layout_marginEnd="@dimen/search_user_button_end_margin"
        android:layout_marginTop="@dimen/search_user_button_top_margin"
        android:text="@string/search_user_button_text"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/search_user_button"
        android:id="@+id/recycler_view_id" />
</RelativeLayout>